@{
    ViewBag.Title = "Calculadora";
}

<h1>Calculadora</h1>

<form method="post" asp-action="Calcular">
    <div class="form-group">
        <label for="numero1">Número 1</label>
        <input type="number" class="form-control" id="numero1" name="Operador1" />
    </div>
    <div class="form-group"></div>
        <label for="numero2">Número 2</label>
        <input type="number" class="form-control" id="numero2" name="Operador1" />
    </div>
    <div class="form-group  mt-2"></div>
        <label for="operacion">Operacion</label>
      <select class="form-control" id="operacion" name="Operacion">
        <option value="sumar">Sumar</option>
        <option value="restar">Restar</option>
        <option value="multiplicar">Multiplicar</option>
        <option value="dividir">Dividir</option>
      </select> 
    </div>
   <button type="submit" class="btn btn-primary nt-2">Calcular</button> 
</form>
<h1>@ViewBag["Message"]</h1>